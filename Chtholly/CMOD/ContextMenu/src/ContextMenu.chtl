// Âú®ElementÊú´Â∞æ‰ΩøÁî®[Origin]ÔºåÂ±ïÁ§∫‰ªªÊÑè‰ΩçÁΩÆÁöÑËØ≠Ê≥ïÁâπÊÄß
[Origin] @JavaScript ContextMenuScript {
    class ChthollyContextMenu {
        constructor(menuId, controllerId, previewId) {
            this.menu = document.getElementById(menuId);
            this.controller = document.getElementById(controllerId);
            this.preview = document.getElementById(previewId);
            this.isEnabled = true;
            this.isMagicalMode = false;
            this.currentTarget = null;
            
            this.config = {
                enabled: true,
                magical: false,
                showShortcuts: true,
                animationSpeed: 'normal'
            };
            
            this.init();
        }
        
        init() {
            this.loadSettings();
            this.bindEvents();
            this.updateUI();
        }
        
        loadSettings() {
            const savedConfig = localStorage.getItem('chtholly-context-menu-config');
            if (savedConfig) {
                this.config = { ...this.config, ...JSON.parse(savedConfig) };
            }
            
            this.isEnabled = this.config.enabled;
            this.isMagicalMode = this.config.magical;
        }
        
        saveSettings() {
            localStorage.setItem('chtholly-context-menu-config', JSON.stringify(this.config));
        }
        
        updateUI() {
            // Êõ¥Êñ∞ÂºÄÂÖ≥Áä∂ÊÄÅ
            const enableToggle = document.getElementById('context-menu-toggle');
            const magicalToggle = document.getElementById('context-menu-magical');
            
            if (enableToggle) {
                enableToggle.classList.toggle('active', this.config.enabled);
            }
            
            if (magicalToggle) {
                magicalToggle.classList.toggle('active', this.config.magical);
            }
            
            // Êõ¥Êñ∞ÊéßÂà∂Âô®Áä∂ÊÄÅ
            this.controller.classList.toggle('active', this.isEnabled);
            
            // Â∫îÁî®È≠îÊ≥ïÊ®°Âºè
            if (this.isMagicalMode) {
                this.menu.classList.add('magical-mode');
            } else {
                this.menu.classList.remove('magical-mode');
            }
        }
        
        bindEvents() {
            // Âè≥ÈîÆ‰∫ã‰ª∂
            document.addEventListener('contextmenu', (e) => {
                if (this.isEnabled) {
                    e.preventDefault();
                    this.showMenu(e.pageX, e.pageY, e.target);
                }
            });
            
            // ÁÇπÂáªÈöêËóèËèúÂçï
            document.addEventListener('click', (e) => {
                if (!this.menu.contains(e.target)) {
                    this.hideMenu();
                }
                
                if (!this.preview.contains(e.target) && !this.controller.contains(e.target)) {
                    this.hidePreview();
                }
            });
            
            // ÈîÆÁõò‰∫ã‰ª∂
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    this.hideMenu();
                    this.hidePreview();
                } else if (e.ctrlKey && e.shiftKey && e.key === 'M') {
                    this.toggle();
                }
            });
            
            // ÈòªÊ≠¢ÈªòËÆ§Âè≥ÈîÆËèúÂçï
            document.addEventListener('contextmenu', (e) => {
                if (this.isEnabled) {
                    e.preventDefault();
                }
            });
        }
        
        showMenu(x, y, target) {
            this.currentTarget = target;
            
            // Ë∞ÉÊï¥‰ΩçÁΩÆÈÅøÂÖçË∂ÖÂá∫Â±èÂπï
            const menuRect = this.menu.getBoundingClientRect();
            const viewportWidth = window.innerWidth;
            const viewportHeight = window.innerHeight;
            
            let adjustedX = x;
            let adjustedY = y;
            
            if (x + menuRect.width > viewportWidth) {
                adjustedX = viewportWidth - menuRect.width - 10;
            }
            
            if (y + menuRect.height > viewportHeight) {
                adjustedY = viewportHeight - menuRect.height - 10;
            }
            
            this.menu.style.left = adjustedX + 'px';
            this.menu.style.top = adjustedY + 'px';
            this.menu.classList.add('show');
            
            // Ê∑ªÂä†ÁâπÊïà
            this.addMenuSparkles();
        }
        
        hideMenu() {
            this.menu.classList.remove('show');
            this.currentTarget = null;
        }
        
        showPreview() {
            this.preview.classList.add('show');
        }
        
        hidePreview() {
            this.preview.classList.remove('show');
        }
        
        toggle() {
            this.isEnabled = !this.isEnabled;
            this.config.enabled = this.isEnabled;
            this.saveSettings();
            this.updateUI();
            
            const status = this.isEnabled ? 'Â∑≤ÂêØÁî®' : 'Â∑≤Á¶ÅÁî®';
            this.showContextToast(`Âè≥ÈîÆËèúÂçï${status}`, this.isEnabled ? 'success' : 'info');
        }
        
        toggleEnabled(toggle) {
            this.config.enabled = !this.config.enabled;
            this.isEnabled = this.config.enabled;
            
            toggle.classList.toggle('active', this.config.enabled);
            this.controller.classList.toggle('active', this.config.enabled);
            
            this.saveSettings();
            
            const status = this.config.enabled ? 'Â∑≤ÂêØÁî®' : 'Â∑≤Á¶ÅÁî®';
            this.showContextToast(`Ëá™ÂÆö‰πâÂè≥ÈîÆËèúÂçï${status}`, this.config.enabled ? 'success' : 'info');
        }
        
        toggleMagical(toggle) {
            this.config.magical = !this.config.magical;
            this.isMagicalMode = this.config.magical;
            
            toggle.classList.toggle('active', this.config.magical);
            
            if (this.isMagicalMode) {
                this.menu.classList.add('magical-mode');
            } else {
                this.menu.classList.remove('magical-mode');
            }
            
            this.saveSettings();
            
            const status = this.config.magical ? 'Â∑≤ÂêØÁî®' : 'Â∑≤ÂÖ≥Èó≠';
            this.showContextToast(`È≠îÊ≥ïÊ®°Âºè${status}`, this.config.magical ? 'success' : 'info');
        }
        
        executeAction(action) {
            this.hideMenu();
            
            switch (action) {
                case 'copy':
                    this.handleCopy();
                    break;
                case 'paste':
                    this.handlePaste();
                    break;
                case 'sakura-rain':
                    this.triggerSakuraRain();
                    break;
                case 'mouse-effect':
                    this.triggerMouseEffect();
                    break;
                case 'mouse-trail':
                    this.triggerMouseTrail();
                    break;
                case 'refresh':
                    this.handleRefresh();
                    break;
                case 'inspect':
                    this.handleInspect();
                    break;
                default:
                    this.showContextToast(`ÊâßË°åÊìç‰Ωú: ${action}`);
            }
        }
        
        handleCopy() {
            const selection = window.getSelection().toString();
            if (selection) {
                navigator.clipboard.writeText(selection).then(() => {
                    this.showContextToast('Â∑≤Â§çÂà∂Âà∞Ââ™Ë¥¥Êùø', 'success');
                }).catch(() => {
                    this.showContextToast('Â§çÂà∂Â§±Ë¥•', 'error');
                });
            } else {
                this.showContextToast('Ê≤°ÊúâÈÄâ‰∏≠ÁöÑÂÜÖÂÆπ', 'warning');
            }
        }
        
        handlePaste() {
            navigator.clipboard.readText().then(text => {
                if (this.currentTarget && this.currentTarget.tagName === 'INPUT' || this.currentTarget.tagName === 'TEXTAREA') {
                    this.currentTarget.value += text;
                    this.showContextToast('Â∑≤Á≤òË¥¥ÂÜÖÂÆπ', 'success');
                } else {
                    this.showContextToast('ËØ∑Âú®ËæìÂÖ•Ê°Ü‰∏≠‰ΩøÁî®Á≤òË¥¥ÂäüËÉΩ', 'warning');
                }
            }).catch(() => {
                this.showContextToast('Á≤òË¥¥Â§±Ë¥•', 'error');
            });
