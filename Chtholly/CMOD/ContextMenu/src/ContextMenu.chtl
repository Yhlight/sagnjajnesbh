    let chthollyContextMenu = null;
    
    // å…¨å±€å‡½æ•°
    function toggleContextMenu() {
        if (chthollyContextMenu) {
            chthollyContextMenu.toggle();
        }
    }
    
    function showContextPreview() {
        if (chthollyContextMenu) {
            chthollyContextMenu.showPreview();
        }
    }
    
    function contextMenuAction(action) {
        if (chthollyContextMenu) {
            chthollyContextMenu.executeAction(action);
        }
    }
    
    function toggleContextMenuEnabled(toggle) {
        if (chthollyContextMenu) {
            chthollyContextMenu.toggleEnabled(toggle);
        }
    }
    
    function toggleContextMenuMagical(toggle) {
        if (chthollyContextMenu) {
            chthollyContextMenu.toggleMagical(toggle);
        }
    }
    
    function initializeContextMenu() {
        // ç­‰å¾…DOMåŠ è½½å®Œæˆ
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeContextMenu);
            return;
        }
        
        // æŸ¥æ‰¾å³é”®èœå•å…ƒç´ 
        const contextMenu = document.querySelector('.chtholly-context-menu');
        const controller = document.querySelector('.chtholly-context-menu-controller');
        const preview = document.querySelector('.chtholly-context-menu-preview');
        
        if (contextMenu && controller && preview) {
            chthollyContextMenu = new ChthollyContextMenu(
                contextMenu.id,
                controller.id,
                preview.id
            );
        }
    }
    
    // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
    initializeContextMenu();
}

