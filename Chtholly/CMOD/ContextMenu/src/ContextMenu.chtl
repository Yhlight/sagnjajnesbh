                } else {
                    this.showContextToast('è¯·åœ¨è¾“å…¥æ¡†ä¸­ä½¿ç”¨ç²˜è´´åŠŸèƒ½', 'warning');
                }
            }).catch(() => {
                this.showContextToast('ç²˜è´´å¤±è´¥', 'error');
            });
        }
        
        triggerSakuraRain() {
            if (window.toggleSakuraRain) {
                window.toggleSakuraRain();
                this.showContextToast('æ¨±èŠ±é›¨æ•ˆæœåˆ‡æ¢', 'success');
            } else {
                this.showContextToast('æ¨±èŠ±é›¨ç»„ä»¶æœªåŠ è½½', 'warning');
            }
        }
        
        triggerMouseEffect() {
            if (window.toggleMouseEffect) {
                window.toggleMouseEffect();
                this.showContextToast('é¼ æ ‡ç‰¹æ•ˆåˆ‡æ¢', 'success');
            } else {
                this.showContextToast('é¼ æ ‡ç‰¹æ•ˆç»„ä»¶æœªåŠ è½½', 'warning');
            }
        }
        
        triggerMouseTrail() {
