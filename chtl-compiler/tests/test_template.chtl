// 模板定义
[Template] @Style ButtonStyle {
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
}

[Template] @Element Card {
    div {
        class: card;
        style {
            border: 1px solid #ddd;
            padding: 20px;
            margin: 10px;
        }
        h3 { text { "Card Title" } }
        p { text { "Card content" } }
    }
}

// 使用模板
div {
    @Element Card;
    
    button {
        style {
            @Style ButtonStyle;
            background: blue;
            color: white;
        }
        text { "Click Me" }
    }
}