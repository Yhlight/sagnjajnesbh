// 珂朵莉模块使用示例
// 展示如何正确导入和使用CMOD+CJMOD混合模块

// 导入珂朵莉CMOD模块中的特定组件
Import [Custom] @Element ChthollyAccordion from Chtholly.Accordion
Import [Custom] @Element ChthollySakura from Chtholly.Sakura
Import [Template] @Element ChthollyMemo from Chtholly.Memo

// 导入珂朵莉CJMOD模块的功能
Import @CJmod from Chtholly.printMylove
Import @CJmod from Chtholly.iNeverAway

html
{
    head
    {
        title: "珂朵莉模块使用示例";
    }

    body
    {
        // 使用珂朵莉手风琴组件（自定义元素）
        @Element ChthollyAccordion from Chtholly;

        // 使用珂朵莉备忘录组件（模板元素）
        @Element ChthollyMemo;

        // 使用珂朵莉樱花雨组件
        @Element ChthollySakura from Chtholly;

        script
        {
            // 使用CJMOD的printMylove功能
            const chthollyArt = printMylove({
                url: "path/to/chtholly.jpg",
                mode: "ASCII",
                width: "80",
                height: "24",
                scale: 1.0
            });
            
            console.log("珂朵莉的ASCII艺术:");
            console.log(chthollyArt);

            // 使用CJMOD的iNeverAway功能
            vir ChthollyMemories = iNeverAway({
                "Smile<Happy>": function() {
                    console.log("🌸 珂朵莉开心地笑了");
                },
                
                "Smile<Sad>": function() {
                    console.log("😢 珂朵莉带着眼泪笑了");
                },
                
                "Promise": {
                    console.log("💕 珂朵莉许下了永恒的约定");
                },
                
                "Forever": {
                    console.log("♾️ 珂朵莉永远是世界上最幸福的女孩");
                }
            });

            // 调用虚拟对象的方法
            ChthollyMemories->Smile<Happy>();
            ChthollyMemories->Promise();
            ChthollyMemories->Forever();
        }
    }
}