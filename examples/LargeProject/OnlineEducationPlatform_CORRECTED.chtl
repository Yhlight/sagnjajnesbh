[Origin] @JavaScript AdvancedInteractions {
    // é«˜çº§äº¤äº’åŠŸèƒ½
    class CourseInteractionManager {
        constructor() {
            this.enrolledCourses = new Set();
            this.favorites = new Set();
            this.init();
        }
        
        init() {
            this.bindEvents();
            this.loadUserData();
        }
        
        bindEvents() {
            document.addEventListener('click', (e) => {
                if (e.target.matches('.btn-enroll')) {
                    this.enrollCourse(e.target.closest('.course-card'));
                }
                
                if (e.target.matches('.btn-favorite')) {
                    this.toggleFavorite(e.target.closest('.course-card'));
                }
            });
        }
        
        enrollCourse(courseCard) {
            const courseId = courseCard.dataset.courseId;
            this.enrolledCourses.add(courseId);
            this.updateUI(courseCard, 'enrolled');
        }
        
        toggleFavorite(courseCard) {
            const courseId = courseCard.dataset.courseId;
            if (this.favorites.has(courseId)) {
                this.favorites.delete(courseId);
                courseCard.querySelector('.btn-favorite').textContent = 'â™¡';
            } else {
                this.favorites.add(courseId);
                courseCard.querySelector('.btn-favorite').textContent = 'â™¥';
            }
        }
        
        updateUI(courseCard, state) {
            courseCard.classList.add(`course-${state}`);
        }
        
        loadUserData() {
            // æ¨¡æ‹Ÿä»APIåŠ è½½ç”¨æˆ·æ•°æ®
            setTimeout(() => {
                this.enrolledCourses = new Set(['course-1', 'course-3']);
                this.favorites = new Set(['course-2', 'course-4']);
                this.updateAllUI();
            }, 500);
        }
        
        updateAllUI() {
            document.querySelectorAll('.course-card').forEach(card => {
                const courseId = card.dataset.courseId;
                if (this.enrolledCourses.has(courseId)) {
                    this.updateUI(card, 'enrolled');
                }
                if (this.favorites.has(courseId)) {
                    card.querySelector('.btn-favorite').textContent = 'â™¥';
                }
            });
        }
    }
    
    // åˆå§‹åŒ–ç®¡ç†å™¨
    new CourseInteractionManager();
}

