                'touchend', 'touchcancel'
            ];
            
            // ä¸ºä¸åŒå…ƒç´ ç»‘å®šä¸åŒäº‹ä»¶
            {{body}}->listen({
                load: function() {
                    console.log('é¡µé¢åŠ è½½å®Œæˆ');
                    initializeApp();
                },
                
                resize: function() {
                    handleResize();
                },
                
                scroll: function() {
                    handleScroll();
                }
            });
            
            {{.course-card}}->listen({
                mouseenter: function() {
                    {{this}}->addClass('hover');
                },
                
                mouseleave: function() {
                    {{this}}->removeClass('hover');
                },
                
                focus: function() {
                    {{this}}->addClass('focused');
                },
                
                blur: function() {
                    {{this}}->removeClass('focused');
                }
            });
            
            // åˆå§‹åŒ–åº”ç”¨
            function initializeApp() {
                // åŠ è½½è¯¾ç¨‹æ•°æ®
                CourseManager->loadCourses();
                
                // åˆå§‹åŒ–åŠ¨ç”»
                {{.course-card}}->forEach((card, index) => {
                    setTimeout(() => {
                        card->addClass('fade-in-up');
                    }, index * 100);
                });
                
                // åˆå§‹åŒ–æœç´¢åŠŸèƒ½
                {{#search-input}}->listen({
                    input: debounce(function() {
                        const query = {{this}}->value;
                        CourseManager->filterCourses(query);
                    }, 300)
                });
            }
            
            function handleResize() {
                // å“åº”å¼å¤„ç†
                const width = window.innerWidth;
                {{body}}->classList->toggle('mobile', width < 768);
                {{body}}->classList->toggle('tablet', width >= 768 && width < 1024);
                {{body}}->classList->toggle('desktop', width >= 1024);
            }
            
            function handleScroll() {
                // æ»šåŠ¨æ•ˆæœ
                const scrollY = window.scrollY;
                {{.main-header}}->classList->toggle('scrolled', scrollY > 50);
            }
            
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }
        }
    }
