            // 初始化应用
            function initializeApp() {
                // 加载课程数据
                CourseManager->loadCourses();
                
                // 初始化动画
                {{.course-card}}->forEach((card, index) => {
                    setTimeout(() => {
                        card->addClass('fade-in-up');
                    }, index * 100);
                });
                
                // 初始化搜索功能
                {{#search-input}}->listen({
                    input: debounce(function() {
                        const query = {{this}}->value;
                        CourseManager->filterCourses(query);
                    }, 300)
                });
            }
            
            function handleResize() {
                // 响应式处理
                const width = window.innerWidth;
                {{body}}->classList->toggle('mobile', width < 768);
                {{body}}->classList->toggle('tablet', width >= 768 && width < 1024);
                {{body}}->classList->toggle('desktop', width >= 1024);
            }
            
            function handleScroll() {
                // 滚动效果
                const scrollY = window.scrollY;
                {{.main-header}}->classList->toggle('scrolled', scrollY > 50);
            }
            
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }
        }
    }
}