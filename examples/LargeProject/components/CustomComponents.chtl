// ========================================
// 自定义组件集合 - 验证自定义系统
// ========================================

// 基于模板的自定义
[Custom] @Element AdvancedCourseHeader from CourseHeader {
    // 删除原有的简单元信息
    delete .course-meta;
    
    // 在标题后插入详细信息
    insert after .course-title {
        div {
            class: course-detailed-meta;
            
            style {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 16px;
                margin-top: 16px;
                
                .meta-item {
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    padding: 8px 12px;
                    background: #f3f4f6;
                    border-radius: 6px;
                    font-size: 0.875rem;
                    
                    .meta-icon {
                        font-size: 1rem;
                    }
                    
                    .meta-label {
                        color: #6b7280;
                    }
                    
                    .meta-value {
                        font-weight: 600;
                        color: #1f2937;
                    }
                }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { 📊 } }
                span { class: meta-label; text { 难度： } }
                span { class: meta-value; text { 初级 } }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { ⏱️ } }
                span { class: meta-label; text { 时长： } }
                span { class: meta-value; text { 2小时30分钟 } }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { 👥 } }
                span { class: meta-label; text { 学员： } }
                span { class: meta-value; text { 1,234人 } }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { ⭐ } }
                span { class: meta-label; text { 评分： } }
                span { class: meta-value; text { 4.8 (256) } }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { 🏷️ } }
                span { class: meta-label; text { 分类： } }
                span { class: meta-value; text { 前端开发 } }
            }
            
            div {
                class: meta-item;
                
                span { class: meta-icon; text { 👨‍🏫 } }
                span { class: meta-label; text { 讲师： } }
                span { class: meta-value; text { 张老师 } }
            }
        }
    }
    
    // 在顶部添加课程状态标签
    insert at top {
        div {
            class: course-status-badges;
            
            style {
                display: flex;
                gap: 8px;
                margin-bottom: 16px;
                
                .status-badge {
                    padding: 4px 12px;
                    border-radius: 16px;
                    font-size: 0.75rem;
                    font-weight: 600;
                    
                    &.hot {
                        background: #fef2f2;
                        color: #dc2626;
                        border: 1px solid #fecaca;
                    }
                    
                    &.new {
                        background: #f0f9ff;
                        color: #0284c7;
                        border: 1px solid #bae6fd;
                    }
                    
                    &.premium {
                        background: #fefce8;
                        color: #ca8a04;
                        border: 1px solid #fde68a;
                    }
                }
            }
            
            span { class: status-badge hot; text { 🔥 热门 } }
            span { class: status-badge new; text { ✨ 最新 } }
            span { class: status-badge premium; text { 👑 精品 } }
        }
    }
}

[Custom] @Element InteractiveLessonList from LessonList {
    // 替换静态课程列表为交互式版本
    replace .lesson-item {
        div {
            class: interactive-lesson-item;
            
            style {
                display: flex;
                align-items: center;
                padding: 20px;
                border: 1px solid #e5e7eb;
                border-radius: 12px;
                margin-bottom: 12px;
                cursor: pointer;
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
                
                &::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    width: 4px;
                    background: #e5e7eb;
                    transition: all 0.3s ease;
                }
                
                &:hover {
                    background: #f9fafb;
                    border-color: #3b82f6;
                    transform: translateX(4px);
                    
                    &::before {
                        background: #3b82f6;
                    }
                }
                
                &.completed {
                    background: #ecfdf5;
                    border-color: #10b981;
                    
                    &::before {
                        background: #10b981;
                    }
                    
                    .lesson-status {
                        background: #10b981;
                        color: white;
                    }
                }
                
                &.current {
                    background: #eff6ff;
                    border-color: #3b82f6;
                    
                    &::before {
                        background: #3b82f6;
                        width: 8px;
                    }
                    
                    .lesson-status {
                        background: #3b82f6;
                        color: white;
                        animation: pulse 2s infinite;
                    }
                }
                
                &.locked {
                    opacity: 0.6;
                    cursor: not-allowed;
                    
                    .lesson-status {
                        background: #9ca3af;
                        color: white;
                    }
                }
            }
            
            div {
                class: lesson-status;
                
                style {
                    width: 32px;
                    height: 32px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-weight: 600;
                    margin-right: 20px;
                    background: #f3f4f6;
                    color: #6b7280;
                    font-size: 0.875rem;
                }
                
                text { 1 }
            }
            
            div {
                class: lesson-content;
                
                style {
                    flex: 1;
                }
                
                div {
                    class: lesson-title;
                    
                    style {
                        font-weight: 600;
                        margin-bottom: 6px;
                        font-size: 1.125rem;
                        color: #1f2937;
                    }
                    
                    text { HTML基础入门 }
                }
                
                div {
                    class: lesson-description;
                    
                    style {
                        font-size: 0.875rem;
                        color: #6b7280;
                        margin-bottom: 8px;
                        line-height: 1.5;
                    }
                    
                    text { 学习HTML的基本语法和常用标签，掌握网页结构的构建方法 }
                }
                
                div {
                    class: lesson-meta;
                    
                    style {
                        display: flex;
                        gap: 16px;
                        font-size: 0.75rem;
                        color: #9ca3af;
                    }
                    
                    span { text { ⏱️ 15分钟 } }
                    span { text { 📝 5个练习 } }
                    span { text { 🎯 3个知识点 } }
                }
            }
            
            div {
                class: lesson-actions;
                
                style {
                    display: flex;
                    flex-direction: column;
                    gap: 8px;
                    align-items: flex-end;
                }
                
                button {
                    class: lesson-play-btn;
                    
                    style {
                        inherit InteractionStyles(button);
                        background: #3b82f6;
                        color: white;
                        border-radius: 20px;
                        padding: 8px 16px;
                        font-size: 0.875rem;
                        
                        &:hover {
                            background: #2563eb;
                        }
                    }
                    
                    text { ▶ 开始学习 }
                }
                
                div {
                    class: lesson-progress-mini;
                    
                    style {
                        width: 60px;
                        height: 4px;
                        background: #e5e7eb;
                        border-radius: 2px;
                        overflow: hidden;
                        
                        .progress-fill {
                            height: 100%;
                            background: #10b981;
                            width: 0%;
                            transition: width 0.5s ease;
                        }
                    }
                    
                    div { class: progress-fill; }
                }
            }
        }
    }
}

// 无值样式组 - 响应式和动画增强
[Custom] @Style ResponsiveEnhancements {
    @media (max-width: 1024px) {
        .course-detailed-meta {
            grid-template-columns: repeat(2, 1fr) !important;
        }
        
        .interactive-lesson-item {
            padding: 16px !important;
            
            .lesson-actions {
                flex-direction: row !important;
                align-items: center !important;
            }
        }
    }
    
    @media (max-width: 768px) {
        .course-detailed-meta {
            grid-template-columns: 1fr !important;
        }
        
        .course-status-badges {
            flex-wrap: wrap;
        }
        
        .interactive-lesson-item {
            flex-direction: column;
            align-items: flex-start !important;
            
            .lesson-status {
                margin-bottom: 12px !important;
                margin-right: 0 !important;
            }
            
            .lesson-content {
                margin-bottom: 12px;
            }
            
            .lesson-actions {
                width: 100%;
                flex-direction: row !important;
                justify-content: space-between;
            }
        }
    }
    
    @media (max-width: 480px) {
        .meta-item {
            justify-content: center;
            text-align: center;
        }
        
        .lesson-actions {
            flex-direction: column !important;
            align-items: stretch !important;
            
            .lesson-play-btn {
                width: 100%;
            }
        }
    }
}

[Custom] @Style AdvancedAnimations {
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    
    @keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }
        50% {
            opacity: 1;
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.95);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    .slide-in-left {
        animation: slideInLeft 0.5s ease-out;
    }
    
    .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
    }
    
    .bounce-in {
        animation: bounceIn 0.8s ease-out;
    }
    
    .stagger-animation {
        .interactive-lesson-item {
            opacity: 0;
            animation: fadeInUp 0.6s ease-out forwards;
        }
        
        .interactive-lesson-item:nth-child(1) { animation-delay: 0.1s; }
        .interactive-lesson-item:nth-child(2) { animation-delay: 0.2s; }
        .interactive-lesson-item:nth-child(3) { animation-delay: 0.3s; }
        .interactive-lesson-item:nth-child(4) { animation-delay: 0.4s; }
        .interactive-lesson-item:nth-child(5) { animation-delay: 0.5s; }
    }
}