// 测试CHTL文件
html
{
    head
    {
        title
        {
            text
            {
                "CHTL测试页面"
            }
        }
        
        style
        {
            body {
                margin: 0;
                padding: 0;
            }
        }
    }
    
    body
    {
        div
        {
            id: container;
            class: main-content;
            
            style
            {
                width: 100%;
                max-width: 1200px;
                margin: 0 auto;
                
                .box
                {
                    padding: 20px;
                    background-color: #f5f5f5;
                }
                
                &:hover
                {
                    background-color: #e0e0e0;
                }
            }
            
            h1
            {
                text
                {
                    "欢迎使用CHTL"
                }
            }
            
            p
            {
                text
                {
                    这是一个使用CHTL编写的示例页面
                }
            }
        }
        
        script
        {
            {{container}}->addEventListener('click', () => {
                console.log('Container clicked!');
            });
        }
    }
}