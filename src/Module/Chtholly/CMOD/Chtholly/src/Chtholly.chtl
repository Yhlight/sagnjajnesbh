// 9. 右键菜单栏
[Custom] @Element ChthollyContextMenu
{
    div
    {
        style
        {
            .context-menu
            {
                position: fixed;
                background: white;
                border: 1px solid ChthollyColors(border);
                border-radius: 4px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                padding: 8px 0;
                display: none;
                z-index: 1000;
            }
            
            .menu-item
            {
                padding: 8px 16px;
                cursor: pointer;
                color: ChthollyColors(text);
            }
            
            .menu-item:hover
            {
                background: ChthollyColors(primary);
            }
        }
        
        script
        {
            {{document}}->listen({
                contextmenu: function(event) {
                    event.preventDefault();
                    const menu = {{.context-menu}};
                    menu.style.display = 'block';
                    menu.style.left = event.clientX + 'px';
                    menu.style.top = event.clientY + 'px';
                },
                
                click: function() {
                    {{.context-menu}}.style.display = 'none';
                }
            });
        }
    }
    
    div
    {
        class: "menu-item";
        text { 菜单项1 }
    }
    
    div
    {
        class: "menu-item";
        text { 菜单项2 }
    }
}

// 10. 进度条
[Custom] @Element ChthollyProgressBar
{
    div
    {
        style
        {
            .progress
            {
                width: 100%;
                background: #f0f0f0;
                border-radius: 4px;
                overflow: hidden;
            }
            
            .progress-bar
            {
                height: 20px;
                background: ChthollyColors(accent);
                width: 0%;
                transition: width 0.3s ease;
            }
        }
        
        script
        {
            let progress = 0;
            const bar = {{.progress-bar}};
            
            setInterval(() => {
                progress += 10;
                if (progress > 100) progress = 0;
                bar.style.width = progress + '%';
            }, 500);
        }
    }
    
    div
    {
        class: "progress-bar";
    }
}