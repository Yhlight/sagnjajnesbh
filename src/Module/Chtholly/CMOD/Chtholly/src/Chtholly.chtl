// 珂朵莉色彩变量组
[Custom] @Var ChthollyColors
{
    primary: "#FFB6C1";
    secondary: "#FFC0CB";
    accent: "#FF69B4";
    background: "#FFF8DC";
    text: "#8B4513";
    border: "#DDA0DD";
}

// 1. 手风琴
[Custom] @Element ChthollyAccordion
{
    div
    {
        style
        {
            .accordion
            {
                background: ChthollyColors(background);
                border: 1px solid ChthollyColors(border);
                border-radius: 8px;
            }
            
            .accordion-header
            {
                background: ChthollyColors(primary);
                padding: 16px;
                cursor: pointer;
                color: ChthollyColors(text);
            }
            
            .accordion-content
            {
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.3s ease;
            }
            
            .accordion-content.active
            {
                max-height: 200px;
            }
        }
        
        script
        {
            {{.accordion-header}}->listen({
                click: function() {
                    const content = this.nextElementSibling;
                    content.classList.toggle('active');
                }
            });
        }
    }
    
    div
    {
        class: "accordion-header";
        text { 点击展开 }
    }
    
    div
    {
        class: "accordion-content";
        
        div
        {
            style: "padding: 16px;";
            text { 内容区域 }
        }
    }
}

// 2. 四叶窗相册
[Custom] @Element ChthollyGallery
{
    div
    {
        style
        {
            .gallery
            {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 16px;
                padding: 16px;
            }
            
            .gallery-item
            {
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                transition: transform 0.3s ease;
            }
            
            .gallery-item:hover
            {
                transform: translateY(-4px);
            }
        }
        
        script
        {
            {{.gallery-item}}->listen({
                click: function() {
                    console.log('相册项点击');
                }
            });
        }
    }
    
    div
    {
        class: "gallery-item";
        
        div
        {
            style: "height: 150px; background: #f0f0f0; display: flex; align-items: center; justify-content: center;";
            text { 图片1 }
        }
    }
    
    div
    {
        class: "gallery-item";
        
        div
        {
            style: "height: 150px; background: #f0f0f0; display: flex; align-items: center; justify-content: center;";
            text { 图片2 }
        }
    }
}

