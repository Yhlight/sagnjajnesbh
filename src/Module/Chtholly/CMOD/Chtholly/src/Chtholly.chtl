{
    div
    {
        style
        {
            .mouse-effect
            {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                z-index: 9999;
            }
        }
        
        script
        {
            {{document}}->listen({
                mousemove: function(event) {
                    // 简单的鼠标特效
                    if (Math.random() > 0.95) {
                        console.log('鼠标特效');
                    }
                }
            });
        }
    }
}

