// 5. 樱花雨
[Custom] @Element ChthollySakura
{
    div
    {
        style
        {
            .sakura-container
            {
                position: relative;
                height: 300px;
                background: linear-gradient(to bottom, ChthollyColors(background), ChthollyColors(primary));
                overflow: hidden;
                border-radius: 8px;
