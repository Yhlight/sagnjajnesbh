        }
        
        script
        {
            let currentMenu = null;
            
            {{document}}->listen({
                contextmenu: function(event) {
                    event.preventDefault();
                    
                    const menu = {{.chtholly-context-menu}};
                    if (menu) {
                        // æ˜¾ç¤ºèœå•
                        menu.style.left = event.clientX + 'px';
                        menu.style.top = event.clientY + 'px';
                        menu.classList.add('show');
                        currentMenu = menu;
                        
                        // ç¡®ä¿èœå•åœ¨è§†å£å†…
                        const rect = menu.getBoundingClientRect();
                        if (rect.right > window.innerWidth) {
                            menu.style.left = (event.clientX - rect.width) + 'px';
                        }
                        if (rect.bottom > window.innerHeight) {
                            menu.style.top = (event.clientY - rect.height) + 'px';
                        }
                        
                        console.log('ğŸ“‹ ç‚æœµè‰å³é”®èœå•æ˜¾ç¤º');
                    }
                },
                
                click: function(event) {
                    // ç‚¹å‡»å…¶ä»–åœ°æ–¹éšè—èœå•
                    if (currentMenu && !currentMenu.contains(event.target)) {
                        currentMenu.classList.remove('show');
                        currentMenu = null;
                    }
                }
            });
            
            // èœå•é¡¹ç‚¹å‡»äº‹ä»¶
            {{.chtholly-context-menu}}->delegate({
                target: {{.context-menu-item}},
                
                click: function(event) {
                    if (!this.classList.contains('disabled')) {
                        const action = this.dataset.action;
                        console.log('ğŸ“‹ ç‚æœµè‰èœå•é¡¹ç‚¹å‡»:', action);
                        
                        // æ‰§è¡Œå¯¹åº”æ“ä½œ
                        switch(action) {
                            case 'copy':
                                navigator.clipboard.writeText('ç‚æœµè‰çš„æ¸©æš–é—®å€™');
                                break;
                            case 'paste':
                                // ç²˜è´´æ“ä½œ
                                break;
                            case 'refresh':
                                location.reload();
                                break;
                        }
                        
                        // éšè—èœå•
                        if (currentMenu) {
                            currentMenu.classList.remove('show');
                            currentMenu = null;
                        }
                    }
                }
            });
        }
