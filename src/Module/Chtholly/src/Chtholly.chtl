[Style]
.chtholly-theme {
    --chtholly-primary: #ff6b9d;
    --chtholly-secondary: #c44569;
    --chtholly-accent: #f8b500;
    --chtholly-background: #ffeaa7;
    --chtholly-text: #2d3436;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.chtholly-container {
    background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(255, 107, 157, 0.3);
    overflow: hidden;
}

[Component]
{{ChthollyTheme}}
    {{.chtholly-theme}}
        {{.chtholly-container}}
