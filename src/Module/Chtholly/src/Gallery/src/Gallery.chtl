div
{
    style
    {
        .chtholly-gallery
        {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            padding: 20px;
            background: linear-gradient(45deg, #ff9a9e, #fecfef, #fecfef, #ff9a9e);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(255, 154, 158, 0.3);
        }

        .chtholly-gallery-item
        {
            position: relative;
            aspect-ratio: 1;
            overflow: hidden;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        &:hover
        {
            transform: scale(1.05);
            z-index: 10;
            box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
        }

        .chtholly-gallery-image
        {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .chtholly-gallery-overlay
        {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 107, 157, 0.8), rgba(196, 69, 105, 0.8));
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .chtholly-gallery-item:hover .chtholly-gallery-overlay
        {
            opacity: 1;
        }

        .chtholly-gallery-item:hover .chtholly-gallery-image
        {
            transform: scale(1.1);
        }
    }

