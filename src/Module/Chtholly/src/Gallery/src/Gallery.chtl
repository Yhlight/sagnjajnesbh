// 珂朵莉四叶窗相册组件
// 如四叶草般幸运的相册展示

div
{
    style
    {
        .chtholly-gallery
        {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            padding: 20px;
            background: linear-gradient(45deg, #ff9a9e, #fecfef, #fecfef, #ff9a9e);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(255, 154, 158, 0.3);
        }

        .chtholly-gallery-item
        {
            position: relative;
            aspect-ratio: 1;
            overflow: hidden;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        &:hover
        {
            transform: scale(1.05);
            z-index: 10;
            box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
        }

        .chtholly-gallery-image
        {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .chtholly-gallery-overlay
        {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 107, 157, 0.8), rgba(196, 69, 105, 0.8));
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .chtholly-gallery-item:hover .chtholly-gallery-overlay
        {
            opacity: 1;
        }

        .chtholly-gallery-item:hover .chtholly-gallery-image
        {
            transform: scale(1.1);
        }
    }

    script
    {
        // 珂朵莉四叶窗相册逻辑
        function initChthollyGallery() {
            {{.chtholly-gallery-item}} -> listen({
                click: function() {
                    const overlay = this.querySelector('.chtholly-gallery-overlay');
                    if (overlay) {
                        overlay.style.opacity = '1';
                        setTimeout(() => {
                            overlay.style.opacity = '0';
                        }, 1000);
                    }
                    console.log('🍀 珂朵莉的四叶窗相册被点击了');
                }
            });
            
            console.log('🍀 珂朵莉四叶窗相册组件已初始化 - 如四叶草般幸运');
        }

        document.addEventListener('DOMContentLoaded', initChthollyGallery);
    }

    div
    {
        class: chtholly-gallery;
        
        div
        {
            class: chtholly-gallery-item;
            
            img
            {
                class: chtholly-gallery-image;
                src: "https://via.placeholder.com/300x300/ff9a9e/ffffff?text=珂朵莉1";
                alt: "珂朵莉的回忆1";
            }
            
            div
            {
                class: chtholly-gallery-overlay;
                text
                {
                    珂朵莉的回忆
                }
            }
        }
        
        div
        {
            class: chtholly-gallery-item;
            
            img
            {
                class: chtholly-gallery-image;
                src: "https://via.placeholder.com/300x300/fecfef/5d4e75?text=珂朵莉2";
                alt: "珂朵莉的回忆2";
            }
            
            div
            {
                class: chtholly-gallery-overlay;
                text
                {
                    幸福的时光
                }
            }
        }
        
        div
        {
            class: chtholly-gallery-item;
            
            img
            {
                class: chtholly-gallery-image;
                src: "https://via.placeholder.com/300x300/ff6b9d/ffffff?text=珂朵莉3";
                alt: "珂朵莉的回忆3";
            }
            
            div
            {
                class: chtholly-gallery-overlay;
                text
                {
                    永恒的约定
                }
            }
        }
        
        div
        {
            class: chtholly-gallery-item;
            
            img
            {
                class: chtholly-gallery-image;
                src: "https://via.placeholder.com/300x300/c44569/ffffff?text=珂朵莉4";
                alt: "珂朵莉的回忆4";
            }
            
            div
            {
                class: chtholly-gallery-overlay;
                text
                {
                    世界上最幸福的女孩
                }
            }
        }
    }
}