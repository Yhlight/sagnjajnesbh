[Style]
.music-player-yui {
    background: linear-gradient(135deg, #ffb3d9 0%, #ff94c2 100%);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 15px 50px rgba(255, 148, 194, 0.3);
    font-family: 'Hiragino Sans', sans-serif;
    color: #8b4b8c;
    max-width: 400px;
    margin: 20px auto;
}

.album-art {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    margin: 0 auto 20px;
    background: linear-gradient(45deg, #ff94c2, #ffb3d9);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: yuiRotate 20s linear infinite;
}

@keyframes yuiRotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.album-art::before {
    content: 'â™ª';
    font-size: 60px;
    color: rgba(255, 255, 255, 0.8);
}

.player-controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin: 20px 0;
}

.control-btn {
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    color: #8b4b8c;
    cursor: pointer;
    transition: all 0.3s ease;
}

.control-btn:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(255, 148, 194, 0.4);
}

