[Import]
@Chtl from Chtholly.Accordion
@Chtl from Yuigahama.MusicPlayer

[Style]
.demo-container {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.demo-header {
    text-align: center;
    color: white;
    margin-bottom: 30px;
}

.demo-title {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 10px;
}

[Component]
{{DemoPage}}
    {{.demo-container}}
        {{.demo-header}}
            {{.demo-title}}CHTL演示页面{{/.demo-title}}
            {{.demo-subtitle}}展示珂朵莉和由比滨结衣模块{{/.demo-subtitle}}
        {{/.demo-header}}
        
        {{ChthollyAccordion}}
            <!-- 珂朵莉手风琴组件 -->
        {{/ChthollyAccordion}}
        
        {{YuiMusicPlayer}}
            <!-- 由比滨结衣音乐播放器 -->
        {{/YuiMusicPlayer}}
        
        {{#interactive-demo}}
            {{.demo-button -> click}}启动效果{{/.demo-button}}
            {{.demo-button -> hover}}悬浮查看{{/.demo-button}}
        {{/interactive-demo}}
    {{/.demo-container}}
{{/DemoPage}}

[Local Style]
.demo-button {
    background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    cursor: pointer;
    margin: 10px;
    transition: all 0.3s ease;
}

.demo-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

[Local Script]
document.addEventListener('DOMContentLoaded', function() {
    console.log('🎉 CHTL演示页面已加载');
    
    // 初始化组件
    initializeDemoComponents();
});

function initializeDemoComponents() {
    // 组件初始化逻辑
    console.log('🌸 珂朵莉: 组件初始化完成');
    console.log('💕 由比滨结衣: 准备就绪～');
}

[Script]
// 全局演示函数
function createDemoPage(container) {
    console.log('🚀 创建CHTL演示页面');
    
    if (container) {
        container.innerHTML = '<div class="demo-container">CHTL Demo</div>';
    }
    
    return container;
}