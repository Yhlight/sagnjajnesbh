        {
            src: "test.jpg";
            alt = "测试图片";
        }
        
        // 9. 测试多个属性
        input
        {
            type: text;
            name = username;
            placeholder: "请输入用户名";
            required = true;
        }
        
        // 10. 测试复杂嵌套
        ul
        {
