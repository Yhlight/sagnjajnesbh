// 4. 测试基础HTML元素
html
{
    head
    {
        title
        {
            text
            {
                "CHTL基础语法测试页面"
            }
        }
    }
    
    body
    {
        // 5. 测试属性 - 使用冒号
        div
        {
            id: main-container;
            class: "container";
            
            text
            {
                "这是主容器"
            }
        }
        
        // 6. 测试属性 - 使用等号 (CE对等式)
        div
        {
            id = secondary-container;
            class = 'content';
            
            text
            {
                '这是次要容器，使用等号定义属性'
            }
        }
        
        // 7. 测试嵌套元素
        section
        {
            class: content-section;
            
            h1
            {
                text
                {
                    "标题文本"
                }
            }
            
            p
            {
                text
                {
                    这是一个段落，使用无修饰字面量
                }
            }
            
            div
            {
                class: nested-div;
                
                span
                {
                    text
                    {
                        "嵌套的span元素"
                    }
                }
            }
        }
        
        // 8. 测试自闭合标签
        br
        {
        }
        
        hr
        {
        }
        
