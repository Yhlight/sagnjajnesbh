[Template] @Style MainTheme {
    container: {
        width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
    
    header: {
        background: blue;
        color: white;
        padding: 40px 0;
        text-align: center;
    }
    
    button: {
        background: lightblue;
        color: white;
        border: none;
        padding: 12px 24px;
        cursor: pointer;
    }
}

[Custom] @Element InfoCard {
    class: card;
    background: white;
    padding: 24px;
    margin: 16px 0;
    
    specialization {
        featured {
            border: 3px solid orange;
        }
    }
}

[Origin] @Html CustomHTML {
    <div class="custom-section">
        <h3>这是原始HTML内容</h3>
        <p>CHTL支持嵌入原始HTML代码</p>
    </div>
}

html {
    lang: zh-CN;
    
    head {
        meta {
            charset: UTF-8;
        }
        
        title { 
            text { CHTL正确语法测试 } 
        }
    }
    
    body {
        inherit: MainTheme.container;
        margin: 0;
        font-family: Arial;
        
        header {
            inherit: MainTheme.header;
            
            h1 {
                text { CHTL编程语言 }
                margin: 0;
                font-size: 2rem;
            }
            
            p {
                text { 正确的CHTL语法演示 }
                margin: 10px 0 0 0;
            }
        }
        
        main {
            padding: 40px 0;
            
            section {
                div {
                    use: InfoCard;
                    class: featured;
                    
                    h2 {
                        text { 模板系统 }
                        color: blue;
                        margin-bottom: 15px;
                    }
                    
                    p {
                        text { CHTL模板系统支持样式继承 }
                        line-height: 1.6;
                    }
                    
                    button {
                        inherit: MainTheme.button;
                        text { 了解更多 }
                        margin-top: 15px;
                    }
                }
                
                div {
                    use: InfoCard;
                    
                    h2 {
                        text { 自定义组件 }
                        color: green;
                        margin-bottom: 15px;
                    }
                    
                    p {
                        text { 支持自定义元素和特例化 }
                        line-height: 1.6;
                    }
                    
                    button {
                        inherit: MainTheme.button;
                        background: green;
                        text { 查看示例 }
                        margin-top: 15px;
                    }
                }
                
                @CustomHTML
            }
        }
        
        footer {
            background: gray;
            color: white;
            text-align: center;
            padding: 30px 0;
            
            p {
                text { CHTL正确语法演示完成 }
                margin: 0;
            }
        }
    }
}