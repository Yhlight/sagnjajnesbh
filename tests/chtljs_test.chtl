// CHTL JS语法测试
html {
    head {
        script {
            // 正确的CHTL JS语法测试
            console.log("Hello from CHTL JS!");
            
            // 定义CHTL JS函数（用于虚对象）
            function calculatorFunction() {
                return {
                    add: function(a, b) { return a + b; },
                    multiply: function(a, b) { return a * b; }
                };
            }
            
            // 正确的虚对象语法
            vir Calculator = calculatorFunction;
        }
    }
    
    body {
        div {
            text { "CHTL JS Test - 正确语法" }
            script {
                // 使用虚对象（应该用箭头操作符 ->）
                // Calculator->add(); 
                console.log("虚对象已定义");
            }
        }
    }
}