// CHTL JS语法测试
html {
    head {
        script {
            vir myObject = {
                name: "test",
                getValue: function() {
                    return this.name;
                }
            };
            
            console.log("Hello from CHTL JS!");
            
            vir calculator = {
                add: function(a, b) {
                    return a + b;
                },
                multiply: function(a, b) {
                    return a * b;
                }
            };
        }
    }
    
    body {
        div {
            text { "CHTL JS Test" }
            script {
                let result = calculator.add(5, 3);
                console.log("Result:", result);
            }
        }
    }
}