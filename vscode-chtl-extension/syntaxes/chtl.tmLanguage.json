{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "CHTL",
    "patterns": [
        {
            "name": "keyword.control.section.chtl",
            "match": "\\[(Info|Export|Style|Component|Script|Import|Global|Local)\\]"
        },
        {
            "name": "entity.name.tag.component.chtl",
            "begin": "\\{\\{([A-Z][a-zA-Z0-9]*)",
            "end": "\\}\\}",
            "beginCaptures": {
                "1": { "name": "entity.name.tag.component.chtl" }
            }
        },
        {
            "name": "entity.name.selector.chtl-js",
            "match": "\\{\\{([.#][a-zA-Z0-9_-]+)\\s*->\\s*(\\w+)\\}\\}",
            "captures": {
                "1": { "name": "entity.name.selector.css.chtl" },
                "2": { "name": "support.function.chtl-js" }
            }
        },
        {
            "name": "keyword.control.import.chtl",
            "match": "@(Html|Style|JavaScript|Chtl|CJmod)\\s+from\\s+([^\\s]+)",
            "captures": {
                "1": { "name": "keyword.control.import.type.chtl" },
                "2": { "name": "string.quoted.import.path.chtl" }
            }
        },
        {
            "name": "comment.line.double-slash.chtl",
            "match": "//.*$"
        }
    ],
    "scopeName": "source.chtl"
}